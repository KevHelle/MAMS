{% extends 'base.html.twig' %}

{% block title %}Vehicle index{% endblock %}

{% block body %}
    <h1>Vehicle index</h1>

    <h2>Vehicles with trips</h2>
<div class="table-container">
    <table class="vehicle-table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Label</th>
            <th>Model</th>
            <th>Plate</th>
            <th>Fiscal Power</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for vehicle in vehiclesWithTrips %}
            <tr>
                <td>{{ vehicle.id }}</td>
                <td>{{ vehicle.Label }}</td>
                <td>{{ vehicle.model }}</td>
                <td>{{ vehicle.plate }}</td>
                <td>{{ vehicle.fiscalPower }}</td>
                <td>
                    <a href="{{ path('app_vehicle_show', {'id': vehicle.id}) }}">Show</a>
                    <a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    <h2>Vehicles without trips</h2>
