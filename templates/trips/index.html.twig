{% extends 'base.html.twig' %}

{% block title %}Trips index{% endblock %}

{% block body %}
    <h1>Trips index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TripDate</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Mileage</th>
                <th>Unit</th>
