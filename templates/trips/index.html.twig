                <td>{{ trip.tripDate ? trip.tripDate|date('Y-m-d') : '' }}</td>
                <td>{{ trip.origin }}</td>
                <td>{{ trip.destination }}</td>
                <td>{{ trip.mileage }}</td>
                <td>{{ trip.unit }}</td>
                <td>{{ trip.context }}</td>
                <td>{{ trip.category }}</td>
                <td>{{ trip.description }}</td>
                <td>
                    {% for vehicle in trip.vehicle %}
                        Vehicule nÂ°{{ loop.index }}{{ vehicle.label }}
                    {% endfor %}
                </td>
                <td>{{ trip.billableClient ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_trips_show', {'id': trip.id}) }}">show</a>
                    <a href="{{ path('app_trips_edit', {'id': trip.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
